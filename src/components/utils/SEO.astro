---
interface Props {
  title: string;
  description?: string;
  image?: string;
  article?: boolean;
}

const { 
  title, 
  description = "The ultimate source for TTRPG adventure reviews and comparisons.", 
  image = "/images/default-og.jpg",
  article = false
} = Astro.props;

const site = Astro.site || "https://theadventurevault.com";
const canonicalURL = new URL(Astro.url.pathname, site);

// Ensure image is absolute or relative to site
const imageUrl = new URL(image, site);
---

{/* Canonical */}
<link rel="canonical" href={canonicalURL} />

{/* Primary Meta Tags */}
<title>{title} | The Adventure Vault</title>
<meta name="title" content={title} />
<meta name="description" content={description} />

{/* Open Graph / Facebook */}
<meta property="og:type" content={article ? 'article' : 'website'} />
<meta property="og:url" content={canonicalURL} />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:image" content={imageUrl} />

{/* Twitter */}
<meta property="twitter:card" content="summary_large_image" />
<meta property="twitter:url" content={canonicalURL} />
<meta property="twitter:title" content={title} />
<meta property="twitter:description" content={description} />
<meta property="twitter:image" content={imageUrl} />

{/* Sitemap Link */}
<link rel="sitemap" href="/sitemap-index.xml" />
