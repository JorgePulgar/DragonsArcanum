---
import { Button } from '../atoms/Button';

const links = [
  { label: 'Reviews', href: '/reviews' },
  { label: 'Comparisons', href: '/comparisons' },
  { label: 'News', href: '/news' },
];
---

<header class="sticky top-0 z-50 w-full border-b border-copper-200 bg-copper-200 backdrop-blur-md">
  <div class="container mx-auto px-4 h-16 flex items-center justify-between">
    {/* Logo */}
    <a href="/" class="flex items-center gap-2 font-serif font-bold text-xl tracking-tight text-copper-950">
      <span class="text-tradewind-700">Dragon's</span>Arcanum
    </a>

    {/* Desktop Nav */}
    <nav class="hidden md:flex items-center gap-6">
      {links.map(link => (
        <a 
          href={link.href} 
          class="text-sm font-medium text-copper-950 hover:text-tradewind-700 transition-colors"
        >
          {link.label}
        </a>
      ))}
    </nav>
  </div>
</header>
