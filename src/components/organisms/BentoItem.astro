---
interface Props {
  colSpan?: 1 | 2 | 3 | 4;
  rowSpan?: 1 | 2;
  className?: string;
}

const { colSpan = 1, rowSpan = 1, className } = Astro.props;

// Tailwind 4 arbitrary values or utility classes logic
const colClasses = {
  1: "md:col-span-1",
  2: "md:col-span-2",
  3: "md:col-span-3",
  4: "md:col-span-4",
};

const rowClasses = {
  1: "md:row-span-1",
  2: "md:row-span-2",
};
---

<div class:list={[
  colClasses[colSpan],
  rowClasses[rowSpan],
  "h-full", 
  className
]}>
  <slot />
</div>
