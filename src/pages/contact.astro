---
import Layout from '../layouts/Layout.astro';
import { Tag } from '../components/atoms/Tag';

const formFields = [
    { label: 'Name', type: 'text', id: 'name', placeholder: 'Your Name' },
    { label: 'Email', type: 'email', id: 'email', placeholder: 'your@email.com' },
    { label: 'Subject', type: 'text', id: 'subject', placeholder: 'What\'s on your mind?' },
];
---

<Layout title="Contact" description="Get in touch with The Adventure Vault." article={false}>
  <div class="max-w-4xl mx-auto px-4 py-12">
    
    <header class="text-center mb-16">
      <Tag label="Get In Touch" className="mb-4" />
      <h1 class="text-4xl md:text-6xl font-serif font-extrabold text-copper-900 mb-6 leading-tight">
        Send a Sending Spell
      </h1>
      <p class="text-xl text-copper-700 max-w-2xl mx-auto">
        Have a question about a review? Want to suggest a product? Or just want to talk D&D?
      </p>
    </header>

    <div class="max-w-2xl mx-auto bg-white p-8 rounded-2xl shadow-xl border border-copper-100 relative overflow-hidden">
        {/* Decorative corner */}
        <div class="absolute -top-10 -right-10 w-32 h-32 bg-tradewind-100 rounded-full blur-2xl opacity-50"></div>
        <div class="absolute -bottom-10 -left-10 w-32 h-32 bg-copper-100 rounded-full blur-2xl opacity-50"></div>

        <form class="relative space-y-6" action="#" method="POST" data-netlify="true" name="contact">
            {formFields.map((field) => (
                <div>
                    <label for={field.id} class="block text-sm font-bold text-copper-900 mb-2 uppercase tracking-wide">
                        {field.label}
                    </label>
                    <input 
                        type={field.type} 
                        id={field.id} 
                        name={field.id}
                        placeholder={field.placeholder}
                        class="w-full px-4 py-3 rounded-lg bg-copper-50 border-2 border-copper-100 focus:border-tradewind-500 focus:outline-none transition-colors text-copper-900 placeholder-copper-400"
                        required
                    />
                </div>
            ))}
            
            <div>
                <label for="message" class="block text-sm font-bold text-copper-900 mb-2 uppercase tracking-wide">
                    Message
                </label>
                <textarea 
                    id="message" 
                    name="message" 
                    rows="5"
                    placeholder="Write your message here..."
                    class="w-full px-4 py-3 rounded-lg bg-copper-50 border-2 border-copper-100 focus:border-tradewind-500 focus:outline-none transition-colors text-copper-900 placeholder-copper-400"
                    required
                ></textarea>
            </div>

            <div class="text-right">
                <button type="submit" class="bg-tradewind-600 hover:bg-tradewind-700 text-white font-bold py-3 px-8 rounded-xl shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 transition-all">
                    Send Message
                </button>
            </div>
        </form>
    </div>

    <div class="mt-16 grid md:grid-cols-2 gap-8 text-center">
         <div class="p-6 bg-copper-50 rounded-xl border border-copper-100">
             <h3 class="font-serif font-bold text-xl text-copper-900 mb-2">Publishers</h3>
             <p class="text-copper-700">Looking to have your product reviewed?</p>
             <a href="mailto:reviews@dragonsarcanum.com" class="text-tradewind-600 font-bold hover:underline mt-2 inline-block">reviews@dragonsarcanum.com</a>
         </div>
         <div class="p-6 bg-copper-50 rounded-xl border border-copper-100">
             <h3 class="font-serif font-bold text-xl text-copper-900 mb-2">Community</h3>
             <p class="text-copper-700">Join the discussion on our socials.</p>
             <div class="flex justify-center gap-4 mt-4">
                 <a href="#" class="text-copper-500 hover:text-tradewind-600 font-bold">Twitter</a>
                 <a href="#" class="text-copper-500 hover:text-tradewind-600 font-bold">Instagram</a>
             </div>
         </div>
    </div>
  </div>
</Layout>
