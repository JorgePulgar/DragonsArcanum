---
import Navbar from '../components/organisms/Navbar.astro';
import Footer from '../components/organisms/Footer.astro';
import SEO from '../components/utils/SEO.astro';
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
  image?: string;
  article?: boolean;
}

const { title, description, image, article } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <SEO title={title} description={description} image={image} article={article} />
  </head>
  <body class="bg-copper-50 text-copper-800 font-sans antialiased min-h-screen flex flex-col selection:bg-tradewind-200 selection:text-tradewind-900">
    <Navbar />
    <main class="flex-1 w-full">
      <slot />
    </main>
    <Footer />
  </body>
</html>
